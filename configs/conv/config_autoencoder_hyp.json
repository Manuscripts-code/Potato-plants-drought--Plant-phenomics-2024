    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 10,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,
        "save_period": 1,
        "verbosity": 2,
        "monitor": "min val_loss",
        "early_stop": 30,
        "tensorboard": true
    }
}