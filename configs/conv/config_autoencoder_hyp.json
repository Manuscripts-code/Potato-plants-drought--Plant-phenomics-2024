{
    "name": "CNN",
    "n_gpu": 1,
    "arch": {
        "type": "ConvNet",
        "args": {}
    },
    "data_loader": {
        "type": "HypDataLoader",
        "args": {
            "data_dir": "C:\\Users\\janezla\\Documents\\DATA\\ana_converted\\slikanje_2022_rad_4",
            "dataset": "PlantsDataset",
            "data_sampler": "ManualGroupSamplerKrka",
            "grouped_labels_filepath": "grouped_labels\\groups_krka.xlsx",
            "batch_size": 32,
            "shuffle": true,
            "train_test_split_size": 0.2,
            "train_valid_split_size": 0.2,
            "num_workers": 4
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.001,
            "weight_decay": 0.0005,
